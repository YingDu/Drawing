<metro:MetroWindow x:Class="Drawing.SaveWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
        Title="保存"
        Height="120" Width="240"
        ShowInTaskbar="False"
        ShowMinButton="False"
        ShowMaxRestoreButton="False"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox Name="DrawingName" metro:TextBoxHelper.Watermark="请输入图形名称" />
        <Button Grid.Row="1" Width="48" Height="16" HorizontalAlignment="Right" Content="保存"
                Click="Save_Click">
        </Button>
    </Grid>
</metro:MetroWindow>
